@page
@model SuperheroSocialClub.Pages.Superhero.EditModel
@{
}

<h1>Edit Superhero</h1>

<div>
    <h5>Superhero Edit Mode</h5>
    <img src="~/Images/@Model.Superhero.Image" class="card-img-top" alt="@Model.Superhero.Name" style="max-height: 500px; object-fit: cover;">
    <div class="card-body">
        <form method="post">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" name="name" value="@Model.Superhero.Name">
            </div>
            <div class="form-group">
                <label for="secretIdentity">Secret Identity:</label>
                <input type="text" class="form-control" id="secretIdentity" name="secretIdentity" value="@Model.Superhero.SecretIdentity">
            </div>
            <div class="form-group">
                <label for="superpowers">Superpowers:</label>
                <input type="text" class="form-control" id="superpowers" name="superpowers" value="@string.Join(", ", Model.Superhero.Superpowers)">
            </div>
            <div class="form-group">
                <label for="image">Image:</label>
                <br />
                <input type="file" class="form-control-file" id="image" name="image">
                <br />
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="~/Superhero/Details" class="btn btn-success">Go Back to details</a>
        </form>
    </div>
</div>


